@page
@model Mobishare.WebApp.Pages.Mezzi.IndexModel
@{
    ViewData["Title"] = "Mezzi Disponibili";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="bi bi-bicycle text-primary"></i> Mezzi Disponibili
    </h2>
    
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (Model.UtenteCorrente?.Sospeso ?? false)
    {
        <div class="alert alert-danger alert-permanent" data-auto-dismiss="false">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <strong>Account sospeso!</strong> Non puoi noleggiare mezzi fino al saldo del debito.
            <a asp-page="/Ricariche/Index" class="alert-link">Ricarica ora</a>
        </div>
    }
    
    @if (Model.HasCorsaInCorso)
    {
        <div class="alert alert-warning alert-permanent" data-auto-dismiss="false">
            <i class="bi bi-info-circle-fill"></i>
            Hai già una corsa in corso. 
            <a asp-page="/Corse/CorsaCorrente" class="alert-link">Visualizzala qui</a>
        </div>
    }

    <!-- Filtri -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="bi bi-funnel"></i> Filtri di Ricerca
            </h5>
        </div>
        <div class="card-body">
            <form method="get">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label"><i class="bi bi-bicycle"></i> Tipo Mezzo</label>
                        <select name="tipoFiltro" class="form-select" asp-for="TipoFiltro">
                            <option value="">Tutti i tipi</option>
                            <option value="Bicicletta">🚴 Bicicletta</option>
                            <option value="BiciElettrica">🚲 Bici Elettrica</option>
                            <option value="Monopattino">🛴 Monopattino</option>
                            <option value="MonopattinoElettrico">⚡ Monopattino Elettrico</option>
                        </select>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label"><i class="bi bi-geo-alt"></i> Parcheggio</label>
                        <select name="parcheggioFiltro" class="form-select" asp-for="ParcheggioFiltro">
                            <option value="">Tutti i parcheggi</option>
                            @foreach (var p in Model.ParcheggiDisponibili)
                            {
                                <option value="@p.Id">@p.Nome - @p.Zona</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">&nbsp;</label>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i> Filtra
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Info: Mezzi filtrati per batteria scarica -->
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i>
        <strong>Nota:</strong> I mezzi elettrici con batteria inferiore al 20% non vengono mostrati per garantire un servizio ottimale.
    </div>
    
    @if (!Model.Mezzi.Any())
    {
        <div class="alert alert-warning text-center py-5">
            <i class="bi bi-exclamation-triangle display-4 text-warning"></i>
            <h4 class="mt-3">Nessun mezzo disponibile</h4>
            <p class="text-muted">
                @if (!string.IsNullOrEmpty(Model.TipoFiltro) || Model.ParcheggioFiltro.HasValue)
                {
                    <span>Prova a modificare i filtri per vedere più mezzi</span>
                }
                else
                {
                    <span>Non ci sono mezzi disponibili al momento. Riprova più tardi.</span>
                }
            </p>
            @if (!string.IsNullOrEmpty(Model.TipoFiltro) || Model.ParcheggioFiltro.HasValue)
            {
                <a href="/Mezzi" class="btn btn-primary mt-3">
                    <i class="bi bi-arrow-counterclockwise"></i> Rimuovi Filtri
                </a>
            }
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var mezzo in Model.Mezzi)
            {
                var tipoMezzoLower = mezzo.Tipo.ToLower();
                var isMezzoElettrico = tipoMezzoLower.Contains("elettric") || tipoMezzoLower.Contains("ebike") || tipoMezzoLower.Contains("escooter");
                
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm hover-card">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                @switch(mezzo.Tipo.ToLower())
                                {
                                    case "bicicletta":
                                    case "bici":
                                        <text>🚴 Bicicletta</text>
                                        break;
                                    case "biciclettaelettrica":
                                    case "bicielettricia":
                                    case "ebike":
                                        <text>🚲 Bici Elettrica</text>
                                        break;
                                    case "monopattino":
                                        <text>🛴 Monopattino</text>
                                        break;
                                    case "monopattinoelettrico":
                                    case "escooter":
                                        <text>⚡ Monopattino Elettrico</text>
                                        break;
                                    default:
                                        @mezzo.Tipo
                                        break;
                                }
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-2">
                                <strong><i class="bi bi-tag"></i> Matricola:</strong> 
                                <span class="badge bg-primary">@mezzo.Matricola</span>
                            </p>
                            <p class="mb-2">
                                <strong><i class="bi bi-check-circle"></i> Stato:</strong> 
                                <span class="badge bg-success">@mezzo.Stato</span>
                            </p>
                            
                            @if (mezzo.LivelloBatteria.HasValue)
                            {
                                var livello = mezzo.LivelloBatteria.Value;
                                string coloreBatteria;
                                string iconaBatteria;
                                
                                if (livello > 80)
                                {
                                    coloreBatteria = "success";
                                    iconaBatteria = "battery-full";
                                }
                                else if (livello > 60)
                                {
                                    coloreBatteria = "success";
                                    iconaBatteria = "battery-half";
                                }
                                else if (livello > 30)
                                {
                                    coloreBatteria = "warning";
                                    iconaBatteria = "battery-half";
                                }
                                else
                                {
                                    coloreBatteria = "danger";
                                    iconaBatteria = "battery";
                                }
                                
                                <p class="mb-2">
                                    <strong><i class="bi bi-battery-charging"></i> Batteria:</strong> 
                                    <span class="badge bg-@coloreBatteria">
                                        <i class="bi bi-@iconaBatteria"></i> @livello%
                                    </span>
                                    @if (livello <= 30 && livello >= 20)
                                    {
                                        <small class="text-warning d-block mt-1">
                                            <i class="bi bi-exclamation-triangle"></i> Batteria in esaurimento
                                        </small>
                                    }
                                </p>
                            }
                            else if (isMezzoElettrico)
                            {
                                <p class="mb-2">
                                    <strong><i class="bi bi-battery-charging"></i> Batteria:</strong> 
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-question-circle"></i> N/D
                                    </span>
                                </p>
                            }
                            
                            @if (!string.IsNullOrEmpty(mezzo.NomeParcheggio))
                            {
                                <p class="mb-2">
                                    <strong><i class="bi bi-geo-alt"></i> Parcheggio:</strong> 
                                    <span class="text-muted">@mezzo.NomeParcheggio</span>
                                </p>
                            }
                            
                            <hr class="my-3">
                            
                            @if (!Model.UtenteCorrente?.Sospeso ?? true && !Model.HasCorsaInCorso)
                            {
                                <form method="post" class="mt-3" onsubmit="return confirm('Confermi il noleggio di questo mezzo?');">
                                    <input type="hidden" name="matricolaMezzo" value="@mezzo.Matricola" />
                                    <input type="hidden" name="idParcheggio" value="@mezzo.IdParcheggioCorrente" />
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="bi bi-play-circle"></i> Noleggia Ora
                                    </button>
                                </form>
                            }
                            else if (Model.UtenteCorrente?.Sospeso ?? false)
                            {
                                <button class="btn btn-secondary w-100 mt-3" disabled>
                                    <i class="bi bi-lock"></i> Account Sospeso
                                </button>
                            }
                            else if (Model.HasCorsaInCorso)
                            {
                                <button class="btn btn-secondary w-100 mt-3" disabled>
                                    <i class="bi bi-lock"></i> Corsa già attiva
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <div class="card shadow-sm mt-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h5 class="mb-0">
                            <i class="bi bi-info-circle text-primary"></i> 
                            Totale mezzi disponibili: <strong>@Model.Mezzi.Count</strong>
                        </h5>
                        <small class="text-muted">
                            Mezzi pronti per il noleggio con carica sufficiente
                        </small>
                    </div>
                    <div class="col-md-4 text-end">
                        @if (!string.IsNullOrEmpty(Model.TipoFiltro) || Model.ParcheggioFiltro.HasValue)
                        {
                            <a href="/Mezzi" class="btn btn-outline-primary">
                                <i class="bi bi-arrow-counterclockwise"></i> Rimuovi Filtri
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <style>
        .hover-card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        
        .hover-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
    </style>
}