@page
@model Mobishare.WebApp.Pages.Ricariche.IndexModel
@{
    ViewData["Title"] = "Gestione Ricariche";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="bi bi-credit-card text-success"></i> Gestione Ricariche
    </h2>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Saldo Attuale -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm border-success">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-wallet2"></i> Saldo Attuale</h5>
                </div>
                <div class="card-body">
                    @if (Model.Saldo != null)
                    {
                        <h2 class="text-success mb-3">
                            €@Model.Saldo.CreditoAttuale.ToString("0.00")
                        </h2>

                        <div class="mb-2">
                            <small class="text-muted">Stato Account:</small><br/>
                            @if (Model.Saldo.UtenteAttivo)
                            {
                                <span class="badge bg-success">Attivo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Sospeso</span>
                            }
                        </div>

                        <hr/>

                        <div class="mb-2">
                            <small class="text-muted">Totale Ricariche:</small>
                            <strong class="float-end">€@Model.Saldo.TotaleRicariche.ToString("0.00")</strong>
                        </div>

                        <div class="mb-2">
                            <small class="text-muted">Ricariche in Sospeso:</small>
                            <strong class="float-end text-warning">€@Model.Saldo.RicaricheInSospeso.ToString("0.00")</strong>
                        </div>

                        <div class="mb-2">
                            <small class="text-muted">Totale Spese Corse:</small>
                            <strong class="float-end text-danger">€@Model.Saldo.TotaleSpese.ToString("0.00")</strong>
                        </div>

                        @if (Model.Saldo.UltimaRicarica.HasValue)
                        {
                            <div class="mt-3 pt-3 border-top">
                                <small class="text-muted">Ultima Ricarica:</small><br/>
                                <small>@Model.Saldo.UltimaRicarica.Value.ToString("dd/MM/yyyy HH:mm")</small>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">Caricamento saldo...</p>
                    }
                </div>
            </div>
        </div>

        <!-- Nuova Ricarica -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-plus-circle"></i> Nuova Ricarica</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="InputRicarica.ImportoRicarica" class="form-label">
                                Importo Ricarica (€)
                            </label>
                            <input asp-for="InputRicarica.ImportoRicarica" 
                                   class="form-control form-control-lg text-center" 
                                   type="number" step="0.01" min="5" max="500"
                                   placeholder="0.00" />
                            <span asp-validation-for="InputRicarica.ImportoRicarica" class="text-danger small"></span>
                            <small class="form-text text-muted">Minimo €5, Massimo €500</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="InputRicarica.TipoRicarica" class="form-label">
                                Metodo di Pagamento
                            </label>
                            <select asp-for="InputRicarica.TipoRicarica" class="form-select">
                                <option value="Carta">💳 Carta di Credito</option>
                                <option value="PayPal">💰 PayPal</option>
                                <option value="Bonifico">🏦 Bonifico Bancario</option>
                            </select>
                        </div>

                        <!-- Importi Rapidi -->
                        <div class="mb-3">
                            <label class="form-label">Importi Rapidi:</label>
                            <div class="d-grid gap-2">
                                <button type="button" class="btn btn-outline-success btn-sm" 
                                        onclick="document.querySelector('input[name=\'InputRicarica.ImportoRicarica\']').value=10">
                                    €10
                                </button>
                                <button type="button" class="btn btn-outline-success btn-sm" 
                                        onclick="document.querySelector('input[name=\'InputRicarica.ImportoRicarica\']').value=25">
                                    €25
                                </button>
                                <button type="button" class="btn btn-outline-success btn-sm" 
                                        onclick="document.querySelector('input[name=\'InputRicarica.ImportoRicarica\']').value=50">
                                    €50
                                </button>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Conferma Ricarica
                            </button>
                        </div>

                        <div class="alert alert-info mt-3 mb-0" role="alert">
                            <small>
                                <i class="bi bi-info-circle"></i> 
                                Il credito sarà disponibile immediatamente dopo il pagamento.
                            </small>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-graph-up"></i> Riepilogo</h5>
                </div>
                <div class="card-body">
                    @if (Model.Saldo != null)
                    {
                        <div class="text-center mb-3">
                            <div class="display-6 text-primary">
                                @Model.Ricariche.Count
                            </div>
                            <small class="text-muted">Ricariche Totali</small>
                        </div>

                        <hr/>

                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted">Entrate</span>
                                <strong class="text-success">+€@Model.Saldo.TotaleRicariche.ToString("0.00")</strong>
                            </div>
                            <div class="progress" style="height: 10px;">
                                <div class="progress-bar bg-success" role="progressbar" 
                                     style="width: @((Model.Saldo.TotaleRicariche / (Model.Saldo.TotaleRicariche + Model.Saldo.TotaleSpese) * 100).ToString("0"))%"></div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted">Uscite</span>
                                <strong class="text-danger">-€@Model.Saldo.TotaleSpese.ToString("0.00")</strong>
                            </div>
                            <div class="progress" style="height: 10px;">
                                <div class="progress-bar bg-danger" role="progressbar" 
                                     style="width: @((Model.Saldo.TotaleSpese / (Model.Saldo.TotaleRicariche + Model.Saldo.TotaleSpese) * 100).ToString("0"))%"></div>
                            </div>
                        </div>

                        @if (Model.Saldo.CreditoAttuale < 10)
                        {
                            <div class="alert alert-warning mt-3 mb-0">
                                <small>
                                    <i class="bi bi-exclamation-triangle"></i> 
                                    Credito basso! Considera una ricarica.
                                </small>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Storico Ricariche -->
    <div class="card shadow-sm mt-4">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0"><i class="bi bi-clock-history"></i> Storico Ricariche</h5>
        </div>
        <div class="card-body">
            @if (Model.Ricariche.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Data</th>
                                <th>Importo</th>
                                <th>Metodo</th>
                                <th>Stato</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ricarica in Model.Ricariche)
                            {
                                <tr>
                                    <td>@ricarica.DataRicarica.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="fw-bold text-success">+€@ricarica.ImportoRicarica.ToString("0.00")</td>
                                    <td>
                                        @if (ricarica.Tipo == "Carta")
                                        {
                                            <span>💳 Carta</span>
                                        }
                                        else if (ricarica.Tipo == "PayPal")
                                        {
                                            <span>💰 PayPal</span>
                                        }
                                        else
                                        {
                                            <span>🏦 Bonifico</span>
                                        }
                                    </td>
                                    <td>
                                        @switch (ricarica.Stato)
                                        {
                                            case "Completato":
                                                <span class="badge bg-success">Completato</span>
                                                break;
                                            case "InSospeso":
                                                <span class="badge bg-warning">In Sospeso</span>
                                                break;
                                            case "Fallito":
                                                <span class="badge bg-danger">Fallito</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@ricarica.Stato</span>
                                                break;
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox display-4"></i>
                    <p class="mt-3">Nessuna ricarica effettuata</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}