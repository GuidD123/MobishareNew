@page
@model Mobishare.WebApp.Pages.DashboardAdmin.GestioneMezziModel
@{
    ViewData["Title"] = "Gestione Mezzi";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-bicycle text-success"></i> Gestione Mezzi
        </h2>
        <a asp-page="/DashboardAdmin/Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Torna alla Dashboard
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Form Aggiungi Mezzo -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">
                <i class="bi bi-plus-circle"></i> Aggiungi Nuovo Mezzo
            </h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="Matricola" class="form-label">
                            <i class="bi bi-tag"></i> Matricola *
                        </label>
                        <input type="text" class="form-control" id="Matricola" name="Matricola" 
                               placeholder="es. BK001, EB042" required>
                        <div class="form-text">Codice identificativo univoco del mezzo</div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="Tipo" class="form-label">
                            <i class="bi bi-bicycle"></i> Tipo Mezzo *
                        </label>
                        <select class="form-select" id="Tipo" name="Tipo" required>
                            <option value="">Seleziona tipo...</option>
                            <option value="Bicicletta">🚴 Bicicletta</option>
                            <option value="BiciclettaElettrica">🚲 Bicicletta Elettrica</option>
                            <option value="MonopattinoElettrico">⚡ Monopattino Elettrico</option>
                        </select>
                        <div class="form-text">Tipologia del mezzo</div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="IdParcheggioCorrente" class="form-label">
                            <i class="bi bi-geo-alt"></i> Parcheggio Iniziale *
                        </label>
                        <select class="form-select" id="IdParcheggioCorrente" name="IdParcheggioCorrente" required>
                            <option value="">Seleziona parcheggio...</option>
                            @foreach (var parcheggio in Model.Parcheggi)
                            {
                                <option value="@parcheggio.Id">
                                    @parcheggio.Nome (@parcheggio.Zona)
                                </option>
                            }
                        </select>
                        <div class="form-text">Parcheggio dove posizionare il mezzo</div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="LivelloBatteria" class="form-label">
                            <i class="bi bi-battery-charging"></i> Livello Batteria (%)
                        </label>
                        <input type="number" class="form-control" id="LivelloBatteria" name="LivelloBatteria" 
                               min="0" max="100" placeholder="es. 100">
                        <div class="form-text">Lascia vuoto per mezzi non elettrici</div>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label for="Stato" class="form-label">
                            <i class="bi bi-check-circle"></i> Stato Iniziale *
                        </label>
                        <select class="form-select" id="Stato" name="Stato" required>
                            <option value="Disponibile">✅ Disponibile</option>
                            <option value="Manutenzione">🔧 In Manutenzione</option>
                            <option value="NonPrelevabile">❌ Non Prelevabile</option>
                        </select>
                        <div class="form-text">Stato iniziale del mezzo</div>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-plus-circle"></i> Aggiungi Mezzo
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Lista Mezzi Esistenti -->
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-list-ul"></i> Mezzi Esistenti
                    <span class="badge bg-success">@Model.Mezzi.Count</span>
                </h5>
                <div>
                    <span class="badge bg-success">@Model.Mezzi.Count(m => m.Stato == "Disponibile") Disponibili</span>
                    <span class="badge bg-primary">@Model.Mezzi.Count(m => m.Stato == "InUso") In Uso</span>
                    <span class="badge bg-warning">@Model.Mezzi.Count(m => m.Stato == "Manutenzione") Manutenzione</span>
                    <span class="badge bg-danger">@Model.Mezzi.Count(m => m.Stato == "NonPrelevabile") Guasti</span>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Mezzi.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Matricola</th>
                                <th>Tipo</th>
                                <th>Parcheggio</th>
                                <th>Batteria</th>
                                <th>Stato</th>
                                <th>Azioni</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var mezzo in Model.Mezzi.OrderBy(m => m.Id))
                            {
                                <tr>
                                    <td><strong>#@mezzo.Id</strong></td>
                                    <td>
                                        <span class="badge bg-primary">@mezzo.Matricola</span>
                                    </td>
                                    <td>
                                        @switch(mezzo.Tipo.ToLower())
                                        {
                                            case "bicicletta":
                                            case "bici":
                                            case "bicimuscolare":
                                                <text>🚴 Bicicletta</text>
                                                break;
                                            case "bicielettrica":
                                            case "bicielettr":
                                            case "ebike":
                                                <text><i class="bi bi-lightning-charge text-warning"></i>Bicicletta Elettrica</text>
                                                break;
                                            case "monopattinoelettrico":
                                            case "escooter":
                                            case "monopattino":
                                                <text><i class="bi bi-lightning-charge text-warning"></i>Monopattino Elettrico</text>
                                                break;
                                            default:
                                                @mezzo.Tipo
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(mezzo.NomeParcheggio))
                                        {
                                            <small class="text-muted">
                                                <i class="bi bi-geo-alt"></i> @mezzo.NomeParcheggio
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>

                                    <td>
                                        @if (mezzo.Tipo.Contains("Elettrica", StringComparison.OrdinalIgnoreCase)  || mezzo.Tipo.Contains("Monopattino", StringComparison.OrdinalIgnoreCase))
                                        {
                                            if (mezzo.LivelloBatteria.HasValue)
                                            { 
                                                var livello = mezzo.LivelloBatteria.Value;
                                                var coloreBatteria = livello > 60 ? "success" 
                                                               : livello > 30 ? "warning" 
                                                               : "danger";
                                                <span class="badge bg-@coloreBatteria">
                                                    <i class="bi bi-battery-charging"></i> @livello%
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">N/D</span>
                                            }
                                         }
                                         else 
                                         {
                                            <span class="text-muted">N/A</span>
                                         }
                                    </td>

                                    <td>
                                        @switch(mezzo.Stato.ToLower())
                                        {
                                            case "disponibile":
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle"></i> Disponibile
                                                </span>
                                                break;
                                            case "inuso":
                                                <span class="badge bg-primary">
                                                    <i class="bi bi-arrow-right-circle"></i> In Uso
                                                </span>
                                                break;
                                            case "manutenzione":
                                            case "inmanutenzione":
                                                <span class="badge bg-warning">
                                                    <i class="bi bi-wrench"></i> Manutenzione
                                                </span>
                                                break;
                                            case "nonprelevabile":
                                            case "guasto":
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle"></i> Non Prelevabile
                                                </span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@mezzo.Stato</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <!-- Sposta mezzo -->
                                        <button type="button" class="btn btn-sm btn-outline-info" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#modalSposta"
                                                onclick="preparaSposta(@mezzo.Id, '@mezzo.Matricola', '@mezzo.NomeParcheggio')">
                                            <i class="bi bi-truck"></i> Sposta
                                        </button>

                                        @if (mezzo.Stato == "Disponibile")
                                        {
                                            <!-- Metti in manutenzione programmata -->
                                            <form method="post" asp-page-handler="MettiInManutenzione" class="d-inline"
                                                  onsubmit="return confirm('Mettere questo mezzo in manutenzione programmata?');">
                                                <input type="hidden" name="id" value="@mezzo.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-warning">
                                                    <i class="bi bi-wrench"></i> Manutenzione
                                                </button>
                                            </form>
                                        }
                                        else if (mezzo.Stato == "Manutenzione" || mezzo.Stato == "NonPrelevabile")
                                        {
                                            <!-- Ripristina a Disponibile -->
                                            <form method="post" asp-page-handler="Ripristina" class="d-inline"
                                                  onsubmit="return confirm('Confermi il ripristino del mezzo a stato Disponibile?');">
                                                <input type="hidden" name="id" value="@mezzo.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-success">
                                                    <i class="bi bi-check-circle"></i> Ripristina
                                                </button>
                                            </form>

                                            @if (mezzo.Stato == "NonPrelevabile") 
                                            {
                                                @if (mezzo.MotivoNonPrelevabile == "GuastoSegnalato")
                                                {
                                                    <small class="d-block text-danger mt-1">
                                                        <i class="bi bi-exclamation-triangle-fill"></i> <strong>Guasto segnalato da utente</strong>
                                                    </small>
                                                }
                                                else if (mezzo.MotivoNonPrelevabile == "BatteriaScarica")
                                                {
                                                    <small class="d-block text-warning mt-1">
                                                        <i class="bi bi-battery"></i> <strong>Batteria scarica (&lt; 20%)</strong>
                                                    </small>

                                                    <!-- 🔋 Bottone ricarica -->
                                                    <form method="post" asp-page-handler="Ricarica" class="d-inline"
                                                        onsubmit="return confirm('Confermi la ricarica della batteria di questo mezzo?');">
                                                        <input type="hidden" name="id" value="@mezzo.Id" />
                                                        <button type="submit" class="btn btn-sm btn-outline-primary">
                                                            <i class="bi bi-battery-charging"></i> Ricarica
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <small class="d-block text-muted mt-1">
                                                        <i class="bi bi-x-circle"></i> Non prelevabile
                                                    </small>
                                                }
                                            }
                                        }
                                        else if (mezzo.Stato == "InUso")
                                        {
                                            <span class="badge bg-primary">
                                                <i class="bi bi-lock"></i> In Corsa
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox display-4"></i>
                    <p class="mt-3">Nessun mezzo presente nel sistema</p>
                    <p class="text-muted">Utilizza il form sopra per aggiungerne uno</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Modale Sposta Mezzo -->
<div class="modal fade" id="modalSposta" tabindex="-1" aria-labelledby="modalSpostaLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Sposta">
                <div class="modal-header bg-info text-white">
                    <h5 class="modal-title" id="modalSpostaLabel">
                        <i class="bi bi-truck"></i> Sposta Mezzo
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="IdMezzoSposta" name="IdMezzoSposta" />
                    
                    <div class="alert alert-info">
                        <strong id="mezzoMatricola"></strong> attualmente si trova in <strong id="mezzoParcheggioCorrente"></strong>
                    </div>

                    <div class="mb-3">
                        <label for="NuovoParcheggioId" class="form-label">
                            <i class="bi bi-geo-alt"></i> Nuovo Parcheggio di Destinazione *
                        </label>
                        <select class="form-select" id="NuovoParcheggioId" name="NuovoParcheggioId" required>
                            <option value="">Seleziona parcheggio...</option>
                            @foreach (var parcheggio in Model.Parcheggi)
                            {
                                <option value="@parcheggio.Id">
                                    @parcheggio.Nome (@parcheggio.Zona) - @parcheggio.Mezzi?.Count / @parcheggio.Capienza posti occupati
                                </option>
                            }
                        </select>
                        <div class="form-text">Seleziona il parcheggio dove spostare il mezzo</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> Annulla
                    </button>
                    <button type="submit" class="btn btn-info">
                        <i class="bi bi-truck"></i> Conferma Spostamento
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts dopo 5 secondi (esclusi quelli permanenti)
        setTimeout(function() {
            $('.alert:not(.alert-permanent)').fadeOut('slow');
        }, 5000);

        // Mostra/nascondi campo batteria in base al tipo mezzo
        document.getElementById('Tipo').addEventListener('change', function() {
            var tipo = this.value.toLowerCase();
            var batteriaCampo = document.getElementById('LivelloBatteria').parentElement;
            
            if (tipo.includes('elettric')) {
                batteriaCampo.style.display = 'block';
                document.getElementById('LivelloBatteria').value = '100';
            } else {
                batteriaCampo.style.display = 'none';
                document.getElementById('LivelloBatteria').value = '';
            }
        });

        // Funzione per preparare il modale di spostamento
        function preparaSposta(idMezzo, matricola, parcheggioCorrente) {
            document.getElementById('IdMezzoSposta').value = idMezzo;
            document.getElementById('mezzoMatricola').textContent = matricola;
            document.getElementById('mezzoParcheggioCorrente').textContent = parcheggioCorrente || 'N/A';
        }

        // Previeni doppi submit e mostra loading
        document.querySelectorAll('form[asp-page-handler]').forEach(form => {
            form.addEventListener('submit', function(e) {
                const submitButton = form.querySelector('button[type="submit"]');
                if (submitButton && !submitButton.disabled) {
                    // Disabilita bottone
                    submitButton.disabled = true;
                    
                    // Cambia testo
                    const originalHTML = submitButton.innerHTML;
                    submitButton.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>Attendi...';
                    
                    // Riabilita dopo 3 secondi (failsafe se non c'è redirect)
                    setTimeout(() => {
                        submitButton.disabled = false;
                        submitButton.innerHTML = originalHTML;
                    }, 3000);
                }
            });
        });
    </script>
}