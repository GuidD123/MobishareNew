@page
@model Mobishare.WebApp.Pages.DashboardAdmin.GestioneParcheggiModel
@{
    ViewData["Title"] = "Gestione Parcheggi";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-building text-primary"></i> Gestione Parcheggi
        </h2>
        <a asp-page="/DashboardAdmin/Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Torna alla Dashboard
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Form Aggiungi Parcheggio -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-plus-circle"></i> Aggiungi Nuovo Parcheggio
            </h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="Nome" class="form-label">
                            <i class="bi bi-tag"></i> Nome Parcheggio *
                        </label>
                        <input type="text" class="form-control" id="Nome" name="Nome" 
                               placeholder="es. Parcheggio Centro" required>
                        <div class="form-text">Nome univoco del parcheggio</div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="Zona" class="form-label">
                            <i class="bi bi-geo-alt"></i> Zona *
                        </label>
                        <input type="text" class="form-control" id="Zona" name="Zona" 
                               placeholder="es. Centro, Periferia Nord" required>
                        <div class="form-text">Zona geografica del parcheggio</div>
                    </div>

                    <div class="col-md-8 mb-3">
                        <label for="Indirizzo" class="form-label">
                            <i class="bi bi-signpost-2"></i> Indirizzo
                        </label>
                        <input type="text" class="form-control" id="Indirizzo" name="Indirizzo" 
                               placeholder="es. Via Roma 123">
                        <div class="form-text">Indirizzo completo (facoltativo)</div>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label for="Capienza" class="form-label">
                            <i class="bi bi-clipboard-data"></i> Capienza *
                        </label>
                        <input type="number" class="form-control" id="Capienza" name="Capienza" 
                               min="1" max="1000" placeholder="es. 50" required>
                        <div class="form-text">Numero massimo di posti</div>
                    </div>

                    <div class="col-md-12 mb-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="Attivo" name="Attivo" checked>
                            <label class="form-check-label" for="Attivo">
                                <i class="bi bi-check-circle"></i> Parcheggio Attivo
                            </label>
                            <div class="form-text">Se disattivato, il parcheggio non sarà visibile agli utenti</div>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle"></i> Aggiungi Parcheggio
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Lista Parcheggi Esistenti -->
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="bi bi-list-ul"></i> Parcheggi Esistenti
                <span class="badge bg-primary">@Model.Parcheggi.Count</span>
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Parcheggi.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Nome</th>
                                <th>Zona</th>
                                <th>Indirizzo</th>
                                <th>Capienza</th>
                                <th>Mezzi</th>
                                <th>Stato</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var parcheggio in Model.Parcheggi.OrderBy(p => p.Id))
                            {
                                <tr>
                                    <td><strong>#@parcheggio.Id</strong></td>
                                    <td>
                                        <i class="bi bi-building text-primary"></i>
                                        <strong>@parcheggio.Nome</strong>
                                    </td>
                                    <td>
                                        <i class="bi bi-geo-alt text-muted"></i>
                                        @parcheggio.Zona
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(parcheggio.Indirizzo))
                                        {
                                            <small class="text-muted">@parcheggio.Indirizzo</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@parcheggio.Capienza posti</span>
                                    </td>
                                    <td>
                                        @{
                                            var mezziCount = parcheggio.Mezzi?.Count ?? 0;
                                            var percentuale = parcheggio.Capienza > 0 
                                                ? (double)mezziCount / parcheggio.Capienza * 100 
                                                : 0;
                                            var coloreBadge = percentuale > 80 ? "danger" 
                                                            : percentuale > 50 ? "warning" 
                                                            : "success";
                                        }
                                        <span class="badge bg-@coloreBadge">
                                            @mezziCount / @parcheggio.Capienza
                                        </span>
                                    </td>
                                    <td>
                                        @if (parcheggio.Attivo)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Attivo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-x-circle"></i> Disattivo
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox display-4"></i>
                    <p class="mt-3">Nessun parcheggio presente nel sistema</p>
                    <p class="text-muted">Utilizza il form sopra per aggiungerne uno</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts dopo 5 secondi
        setTimeout(function() {
            $('.alert:not(.alert-permanent)').fadeOut('slow');
        }, 5000);
    </script>
}