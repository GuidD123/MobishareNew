@page
@model Mobishare.WebApp.Pages.DashboardUtente.IndexModel
@{
    ViewData["Title"] = "Dashboard Utente - Mobishare";
    Layout = "_Layout";
}

<div class="container mt-4">
    
    <!-- Header con benvenuto -->
    <div class="row mb-4">
        <div class="col-12">
            <h2>Benvenuto, @Model.NomeUtente</h2>
            <p class="text-muted">Gestisci le tue corse e il tuo account</p>
        </div>
    </div>

    <!-- Alert messaggi -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Alert utente sospeso -->
    @if (Model.Sospeso)
    {
        <div class="alert alert-danger">
            <strong>Account Sospeso</strong>
            <p class="mb-2">Il tuo account è stato sospeso. Ricarica il credito per continuare a utilizzare i servizi.</p>
            <a href="/Ricariche" class="btn btn-warning btn-sm">Ricarica Ora</a>
        </div>
    }

    <!-- Cards Statistiche -->
    <div class="row mb-4">
        <!-- Credito -->
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <h6 class="text-muted mb-2">Credito Disponibile</h6>
                    <h2 class="mb-0 @(Model.Credito > 0 ? "text-success" : "text-danger")">
                        @Model.Credito.ToString("C2")
                    </h2>
                    <a href="/Ricariche" class="btn btn-success btn-sm mt-3">Ricarica</a>
                </div>
            </div>
        </div>

        <!-- Corse Totali -->
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <h6 class="text-muted mb-2">Corse Completate</h6>
                    <h2 class="mb-0 text-primary">@Model.TotaleCorseCompletate</h2>
                    <a href="/Corse" class="btn btn-primary btn-sm mt-3">Vedi Storico</a>
                </div>
            </div>
        </div>

        <!-- Spesa Totale -->
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <h6 class="text-muted mb-2">Spesa Totale</h6>
                    <h2 class="mb-0 text-info">@Model.SpesaTotale.ToString("C2")</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Corsa in corso (se esiste) -->
    @if (Model.HasCorsaInCorso)
    {
        <div class="card mb-4 border-warning">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Corsa in Corso</h5>
            </div>
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <p class="mb-1"><strong>Mezzo:</strong> @Model.CorsaAttiva?.TipoMezzo - @Model.CorsaAttiva?.MatricolaMezzo</p>
                        <p class="mb-1"><strong>Inizio:</strong> @Model.CorsaAttiva?.DataOraInizio.ToString("dd/MM/yyyy HH:mm")</p>
                        <p class="mb-0"><strong>Durata:</strong> <span id="durataCorsa">Calcolo in corso...</span></p>
                    </div>
                    <div class="col-md-4 text-end">
                        <a href="/Corse/CorsaCorrente" class="btn btn-warning btn-lg">
                            Visualizza Corsa
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (!Model.Sospeso)
    {
        <!-- Azione principale: Noleggia mezzo -->
        <div class="card mb-4 border-success">
            <div class="card-body text-center py-5">
                <h3 class="mb-3">Pronto per una nuova corsa?</h3>
                <p class="text-muted mb-4">Trova un mezzo disponibile e inizia subito</p>
                <a href="/Mezzi" class="btn btn-success btn-lg">
                    Noleggia un Mezzo
                </a>
            </div>
        </div>
    }

    <!-- Azioni Rapide -->
    <div class="row">
        <div class="col-12 mb-3">
            <h4>Azioni Rapide</h4>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-bicycle display-4 text-primary"></i>
                    </div>
                    <h5 class="card-title">Mezzi Disponibili</h5>
                    <p class="card-text text-muted">Trova mezzi vicino a te</p>
                    <a href="/Mezzi" class="btn btn-primary btn-sm">Esplora</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-clock-history display-4 text-success"></i>
                    </div>
                    <h5 class="card-title">Storico Corse</h5>
                    <p class="card-text text-muted">Tutte le tue corse passate</p>
                    <a href="/Corse" class="btn btn-success btn-sm">Visualizza</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-wallet2 display-4 text-warning"></i>
                    </div>
                    <h5 class="card-title">Ricariche</h5>
                    <p class="card-text text-muted">Gestisci il tuo credito</p>
                    <a href="/Ricariche" class="btn btn-warning btn-sm">Ricarica</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-person-circle display-4 text-info"></i>
                    </div>
                    <h5 class="card-title">Profilo</h5>
                    <p class="card-text text-muted">Gestisci il tuo account</p>
                    <a href="/Profilo" class="btn btn-info btn-sm">Modifica</a>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @if (Model.HasCorsaInCorso && Model.CorsaAttiva != null)
    {
        <script>
            // Calcola durata corsa in tempo reale
            const startTime = new Date('@Model.CorsaAttiva.DataOraInizio.ToString("o")');
            
            function aggiornaDurata() {
                const now = new Date();
                const diff = now - startTime;
                
                const hours = Math.floor(diff / 3600000);
                const minutes = Math.floor((diff % 3600000) / 60000);
                
                const durataElement = document.getElementById('durataCorsa');
                if (durataElement) {
                    if (hours > 0) {
                        durataElement.textContent = hours + ' ore e ' + minutes + ' minuti';
                    } else {
                        durataElement.textContent = minutes + ' minuti';
                    }
                }
            }
            
            aggiornaDurata();
            setInterval(aggiornaDurata, 60000); // Aggiorna ogni minuto
        </script>
    }
}