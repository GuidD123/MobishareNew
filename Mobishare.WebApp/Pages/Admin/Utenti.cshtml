@page
@model Mobishare.WebApp.Pages.Admin.UtentiModel
@{
    ViewData["Title"] = "Gestione Utenti";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-people-fill text-warning"></i> Gestione Utenti
        </h2>
        <a asp-page="/Dashboard/Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Torna alla Dashboard
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Tabs -->
    <ul class="nav nav-tabs mb-4" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link @(Model.MostraSoloSospesi ? "" : "active")" 
                    data-bs-toggle="tab" data-bs-target="#tutti" type="button">
                <i class="bi bi-people"></i> Tutti gli Utenti (@Model.TuttiUtenti.Count)
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link @(Model.MostraSoloSospesi ? "active" : "")" 
                    data-bs-toggle="tab" data-bs-target="#sospesi" type="button">
                <i class="bi bi-person-x"></i> Utenti Sospesi (@Model.UtentiSospesi.Count)
            </button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content">
        <!-- Tab Tutti gli Utenti -->
        <div class="tab-pane fade @(Model.MostraSoloSospesi ? "" : "show active")" id="tutti">
            @if (Model.TuttiUtenti.Any())
            {
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Nome</th>
                                        <th>Email</th>
                                        <th>Ruolo</th>
                                        <th>Credito</th>
                                        <th>Stato</th>
                                        <th>Azioni</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var utente in Model.TuttiUtenti.OrderBy(u => u.Sospeso).ThenBy(u => u.Nome))
                                    {
                                        <tr class="@(utente.Sospeso ? "table-warning" : "")">
                                            <td><strong>#@utente.Id</strong></td>
                                            <td>@utente.Nome</td>
                                            <td><small>@utente.Email</small></td>
                                            <td>
                                                @if (utente.Ruolo == "Gestore")
                                                {
                                                    <span class="badge bg-primary">Gestore</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Utente</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge @(utente.Credito > 0 ? "bg-success" : "bg-danger")">
                                                    €@utente.Credito.ToString("0.00")
                                                </span>
                                            </td>
                                            <td>
                                                @if (utente.Sospeso)
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="bi bi-x-circle"></i> Sospeso
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle"></i> Attivo
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (utente.Sospeso && utente.Ruolo != "Gestore")
                                                {
                                                    <button type="button" class="btn btn-sm btn-success" 
                                                            data-bs-toggle="modal" 
                                                            data-bs-target="#modalRiattiva@(utente.Id)">
                                                        <i class="bi bi-check-circle"></i> Riattiva
                                                    </button>
                                                }
                                                else if (!utente.Sospeso)
                                                {
                                                    <span class="text-muted"><small>Nessuna azione</small></span>
                                                }
                                            </td>
                                        </tr>

                                        <!-- Modal Conferma Riattivazione -->
                                        @if (utente.Sospeso && utente.Ruolo != "Gestore")
                                        {
                                            <div class="modal fade" id="modalRiattiva@(utente.Id)" tabindex="-1">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header bg-warning">
                                                            <h5 class="modal-title">Conferma Riattivazione</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <p>Vuoi riattivare l'utente <strong>@utente.Nome</strong>?</p>
                                                            <div class="alert alert-info">
                                                                <strong>Dettagli Utente:</strong><br/>
                                                                Email: @utente.Email<br/>
                                                                Credito attuale: €@utente.Credito.ToString("0.00")
                                                            </div>
                                                            <p class="text-muted small">
                                                                <i class="bi bi-info-circle"></i> 
                                                                La riattivazione permetterà all'utente di utilizzare nuovamente il servizio.
                                                            </p>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                                Annulla
                                                            </button>
                                                            <form method="post" asp-page-handler="Riattiva" class="d-inline">
                                                                <input type="hidden" name="idUtente" value="@utente.Id" />
                                                                <button type="submit" class="btn btn-success">
                                                                    <i class="bi bi-check-circle"></i> Conferma Riattivazione
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-4 text-muted"></i>
                    <p class="mt-3 text-muted">Nessun utente presente nel sistema</p>
                </div>
            }
        </div>

        <!-- Tab Utenti Sospesi -->
        <div class="tab-pane fade @(Model.MostraSoloSospesi ? "show active" : "")" id="sospesi">
            @if (Model.UtentiSospesi.Any())
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> 
                    <strong>Attenzione:</strong> Questi utenti hanno il credito insufficiente e necessitano di approvazione per essere riattivati.
                </div>

                <div class="row">
                    @foreach (var utente in Model.UtentiSospesi.OrderBy(u => u.Credito))
                    {
                        <div class="col-lg-6 mb-3">
                            <div class="card shadow-sm border-warning">
                                <div class="card-header bg-warning">
                                    <h6 class="mb-0">
                                        <i class="bi bi-person-x"></i> @utente.Nome
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <p class="mb-2">
                                        <strong>Email:</strong> @utente.Email
                                    </p>
                                    <p class="mb-2">
                                        <strong>ID Utente:</strong> #@utente.Id
                                    </p>
                                    <p class="mb-3">
                                        <strong>Credito:</strong> 
                                        <span class="badge @(utente.Credito >= 0 ? "bg-success" : "bg-danger")">
                                            €@utente.Credito.ToString("0.00")
                                        </span>
                                    </p>

                                    @if (utente.Credito < 0)
                                    {
                                        <div class="alert alert-danger mb-3">
                                            <small>
                                                <i class="bi bi-exclamation-triangle"></i> 
                                                L'utente ha un debito di <strong>€@(Math.Abs(utente.Credito)).ToString("0.00")</strong>
                                            </small>
                                        </div>
                                    }

                                    <button type="button" class="btn btn-success w-100" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#modalRiattivaCard@(utente.Id)">
                                        <i class="bi bi-check-circle"></i> Riattiva Utente
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Modal per riattivazione da card -->
                        <div class="modal fade" id="modalRiattivaCard@(utente.Id)" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header bg-warning">
                                        <h5 class="modal-title">Conferma Riattivazione</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Vuoi riattivare l'utente <strong>@utente.Nome</strong>?</p>
                                        <div class="alert alert-info">
                                            <strong>Dettagli Utente:</strong><br/>
                                            Email: @utente.Email<br/>
                                            Credito attuale: €@utente.Credito.ToString("0.00")
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                                        <form method="post" asp-page-handler="Riattiva" class="d-inline">
                                            <input type="hidden" name="idUtente" value="@utente.Id" />
                                            <button type="submit" class="btn btn-success">
                                                <i class="bi bi-check-circle"></i> Conferma Riattivazione
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-success text-center">
                    <i class="bi bi-check-circle display-4"></i>
                    <p class="mt-3 mb-0">
                        <strong>Ottimo!</strong> Non ci sono utenti sospesi al momento.
                    </p>
                </div>
            }
        </div>
    </div>
</div>