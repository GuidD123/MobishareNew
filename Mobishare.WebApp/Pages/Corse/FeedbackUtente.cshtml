@page
@model Mobishare.WebApp.Pages.Corse.FeedbackUtenteModel
@{
    ViewData["Title"] = "Lascia Feedback";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white text-center">
                    <h4 class="mb-0">
                        <i class="bi bi-check-circle-fill"></i> Corsa Terminata!
                    </h4>
                </div>
                <div class="card-body">
                    @if (Model.CorsaTerminata != null)
                    {
                        <!-- Riepilogo Corsa -->
                        <div class="alert alert-info mb-4">
                            <h5><i class="bi bi-info-circle"></i> Riepilogo Corsa</h5>
                            <hr/>
                            <div class="row">
                                <div class="col-6">
                                    <p class="mb-1"><strong>Mezzo:</strong> @Model.CorsaTerminata.MatricolaMezzo</p>
                                    <p class="mb-1"><strong>Tipo:</strong> @Model.CorsaTerminata.TipoMezzo</p>
                                </div>
                                <div class="col-6">
                                    <p class="mb-1"><strong>Durata:</strong> @Model.DurataMinuti minuti</p>
                                    <p class="mb-1"><strong>Costo:</strong> €@Model.CorsaTerminata.CostoFinale</p>
                                </div>
                            </div>
                        </div>

                        <!-- Form Feedback -->
                        <h5 class="mb-3"><i class="bi bi-star-fill text-warning"></i> Come è andata la corsa?</h5>
                        
                        <form method="post">
                            <input type="hidden" name="IdCorsa" value="@Model.CorsaTerminata.Id" />

                            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                            {
                                <div class="alert alert-danger">
                                    <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
                                </div>
                            }

                            <!-- Valutazione con Stelle -->
                            <div class="mb-4">
                                <label class="form-label"><strong>Valutazione *</strong></label>
                                <div class="rating-stars text-center p-3 border rounded">
                                    <div class="star-rating">
                                        <input type="radio" id="star5" name="Valutazione" value="5" required />
                                        <label for="star5" title="Ottimo">
                                            <i class="bi bi-star-fill"></i>
                                        </label>

                                        <input type="radio" id="star4" name="Valutazione" value="4" />
                                        <label for="star4" title="Buono">
                                            <i class="bi bi-star-fill"></i>
                                        </label>

                                        <input type="radio" id="star3" name="Valutazione" value="3" />
                                        <label for="star3" title="Sufficiente">
                                            <i class="bi bi-star-fill"></i>
                                        </label>

                                        <input type="radio" id="star2" name="Valutazione" value="2" />
                                        <label for="star2" title="Scarso">
                                            <i class="bi bi-star-fill"></i>
                                        </label>

                                        <input type="radio" id="star1" name="Valutazione" value="1" />
                                        <label for="star1" title="Pessimo">
                                            <i class="bi bi-star-fill"></i>
                                        </label>
                                    </div>
                                    <div class="rating-text mt-2 text-muted">
                                        <small>Seleziona da 1 (Pessimo) a 5 (Ottimo) stelle</small>
                                    </div>
                                </div>
                            </div>

                            <!-- Commento Opzionale -->
                            <div class="mb-4">
                                <label for="Commento" class="form-label">
                                    <strong>Commento</strong> <small class="text-muted">(facoltativo)</small>
                                </label>
                                <textarea class="form-control" id="Commento" name="Commento" rows="4" 
                                          placeholder="Racconta la tua esperienza... (max 500 caratteri)" 
                                          maxlength="500"></textarea>
                                <div class="form-text">Aiutaci a migliorare il servizio!</div>
                            </div>

                            <!-- Bottoni -->
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="bi bi-send-fill"></i> Invia Feedback
                                </button>
                                <a asp-page="/Corse/Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-skip-forward"></i> Salta (vai allo storico)
                                </a>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-exclamation-circle display-1 text-danger"></i>
                            <p class="mt-3">Nessuna corsa da valutare</p>
                            <a asp-page="/Corse/Index" class="btn btn-primary">Vai allo storico</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Star Rating CSS */
        .star-rating {
            display: flex;
            flex-direction: row-reverse;
            justify-content: center;
            font-size: 3rem;
        }

        .star-rating input {
            display: none;
        }

        .star-rating label {
            color: #ddd;
            cursor: pointer;
            transition: color 0.2s;
        }

        .star-rating label:hover,
        .star-rating label:hover ~ label,
        .star-rating input:checked ~ label {
            color: #ffc107;
        }

        .star-rating label:hover {
            transform: scale(1.1);
        }

        .rating-stars {
            background: #f8f9fa;
        }
    </style>
}