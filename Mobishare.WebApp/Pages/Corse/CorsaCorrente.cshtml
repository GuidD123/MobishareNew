@page
@model Mobishare.WebApp.Pages.Corse.CorsaCorrenteModel
@{
    ViewData["Title"] = "Corsa in Corso";
}


<div class="container mt-4">
    @if (Model.Corsa == null)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Non hai corse in corso.
            <a href="/Mezzi" class="alert-link">Noleggia un mezzo</a>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header bg-success text-white">
                <h4><i class="bi bi-bicycle"></i> Corsa in Corso</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5>Dettagli Mezzo</h5>
                        <p>
                            <strong>ID Mezzo:</strong> @Model.Corsa.IdMezzo<br>
                            <strong>Data Inizio:</strong> @Model.Corsa.DataInizio.ToString("dd/MM/yyyy HH:mm")<br>
                            <strong>Durata:</strong> @Model.DurataCorsaMinuti minuti
                        </p>
                    </div>
                    <div class="col-md-6">
                        <h5>Costo Stimato</h5>
                        <div class="alert alert-warning">
                            <h3 class="mb-0">€ @Model.CostoStimato.ToString("F2")</h3>
                            <small>Il costo finale potrebbe variare</small>
                        </div>
                    </div>
                </div>

                <hr>

                <h5>Termina Corsa</h5>
                <form method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Latitudine</label>
                                <input type="number" step="0.000001" name="Latitudine" class="form-control" 
                                       value="45.4642" required />
                                <small class="text-muted">Posizione finale del mezzo</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Longitudine</label>
                                <input type="number" step="0.000001" name="Longitudine" class="form-control" 
                                       value="9.1900" required />
                                <small class="text-muted">Posizione finale del mezzo</small>
                            </div>
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-danger btn-lg w-100">
                        <i class="bi bi-stop-circle"></i> Termina Corsa
                    </button>
                </form>
            </div>
        </div>
    }
</div>