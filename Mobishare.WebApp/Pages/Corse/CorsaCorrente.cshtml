@page
@model Mobishare.WebApp.Pages.Corse.CorsaCorrenteModel
@{
    ViewData["Title"] = "Corsa in Corso";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="bi bi-bicycle text-success"></i> Corsa in Corso
    </h2>

    <div id="puntiBonusWrapper" class="alert alert-warning d-inline-flex align-items-center mb-4 shadow-sm" style="border-left: 5px solid #f59e0b;">
        <i class="bi bi-star-fill text-warning me-2 fs-4"></i>
        <span>
            <strong id="puntiBonus">@Model.PuntiBonus</strong> punti bonus<br/>
            <small class="text-muted">+1 ogni 30 min con bici muscolare</small>
        </span>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.CorsaAttiva == null)
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-info-circle display-4"></i>
            <h4 class="mt-3">Non hai corse in corso</h4>
            <p class="text-muted">Noleggia un mezzo per iniziare una nuova corsa!</p>
            <a asp-page="/Mezzi/Index" class="btn btn-primary mt-3">
                <i class="bi bi-bicycle"></i> Cerca Mezzi Disponibili
            </a>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">
                    <i class="bi bi-play-circle"></i> Corsa Attiva #@Model.CorsaAttiva.Id
                </h4>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5><i class="bi bi-bicycle"></i> Dettagli Mezzo</h5>
                        <div class="card bg-light">
                            <div class="card-body">
                                <p class="mb-2">
                                    <strong>Matricola:</strong> 
                                    <span class="badge bg-primary">@Model.CorsaAttiva.MatricolaMezzo</span>
                                </p>
                                <p class="mb-2">
                                    <strong>Parcheggio Prelievo:</strong> 
                                    <span class="text-muted">@(Model.CorsaAttiva.NomeParcheggioPrelievo ?? $"#{Model.CorsaAttiva.IdParcheggioPrelievo}")</span>
                                </p>
                                <p class="mb-0">
                                    <strong>Inizio Corsa:</strong><br/>
                                    <span class="text-muted">@Model.CorsaAttiva.DataOraInizio.ToString("dd/MM/yyyy HH:mm:ss")</span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h5><i class="bi bi-clock-history"></i> Durata e Costo</h5>
                        <div class="alert alert-warning mb-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <small class="text-muted">Durata</small>
                                    <h4 class="mb-0" id="durataCorsa">@Model.DurataMinuti min</h4>
                                </div>
                                <div class="text-end">
                                    <small class="text-muted">Costo Stimato</small>
                                    <h3 class="mb-0" id="costoStimato">€@Model.CostoStimato.ToString("0.00")</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <hr/>

                <form method="post">
                    <input type="hidden" name="idCorsa" value="@Model.CorsaAttiva.Id" />
                    
                    <div class="row">   
                        <div class="col-md-6 mb-3">
                            <label asp-for="InputFineCorsa.IdParcheggioRilascio" class="form-label">
                                Parcheggio di Rilascio *
                            </label>
                            <select asp-for="InputFineCorsa.IdParcheggioRilascio" class="form-select" required>
                                <option value="">-- Seleziona Parcheggio --</option>
                                @foreach (var parcheggio in Model.ParcheggiDisponibili)
                                {
                                    <option value="@parcheggio.Id">
                                        @parcheggio.Nome - @parcheggio.Zona
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Segnalazione Problema</label>
                            <div class="form-check form-switch">
                                <input asp-for="InputFineCorsa.SegnalazioneProblema" 
                                       class="form-check-input" type="checkbox" />
                                <label class="form-check-label">
                                    Il mezzo ha problemi?
                                </label>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-danger btn-lg w-100" onclick="this.disabled=true; this.form.submit();">
                        <i class="bi bi-stop-circle"></i> Termina Corsa Ora
                    </button>
                </form>
            </div>
        </div>
    }
</div>


@section Scripts {
    @* --- TIMER AGGIORNAMENTO DURATA E COSTO IN TEMPO REALE --- *@
    @if (Model.CorsaAttiva != null)
    {
        <script>
            const startTime = new Date('@Model.CorsaAttiva.DataOraInizio.ToString("o")');
            const tipoMezzo = '@Model.CorsaAttiva.TipoMezzo';
            const COSTO_BASE = 0.50;
            
            // Tariffa al minuto in base al tipo mezzo
            const costoAlMinuto = {
                'MonopattinoElettrico': 0.25,
                'BiciElettrica': 0.20,
                'BiciMuscolare': 0.10
            }[tipoMezzo] || 0.10;

            function aggiornaDurataCosto() {
                const now = new Date();
                const diff = now - startTime;
                const minuti = Math.floor(diff / 60000);
                
                // Aggiorna durata
                const durataEl = document.getElementById('durataCorsa');
                if (durataEl) {
                    const ore = Math.floor(minuti / 60);
                    const min = minuti % 60;
                    durataEl.textContent = ore > 0 ? `${ore}h ${min}min` : `${min} min`;
                }
                
                // Calcola costo
                let costo = COSTO_BASE;
                if (minuti > 30) {
                    const minutiExtra = minuti - 30;
                    costo = COSTO_BASE + (minutiExtra * costoAlMinuto);
                }
                
                // Aggiorna costo
                const costoEl = document.getElementById('costoStimato');
                if (costoEl) {
                    costoEl.textContent = '€' + costo.toFixed(2);
                }
            }

            // Aggiorna immediatamente e poi ogni 10 secondi
            aggiornaDurataCosto();
            setInterval(aggiornaDurataCosto, 10000);
        </script>
    }

    <script>
        //Aggiornamento punti in tempo reale mentre utente è in questa pagina (CorsaCorrente)
        document.addEventListener("DOMContentLoaded", function () {

            const puntiEl = document.getElementById("puntiBonus");
            const wrapper = document.getElementById("puntiBonusWrapper");

            if (!window.mobishareConnection) return;

            // --- BONUS GUADAGNATO ---
            window.mobishareConnection.on("BonusApplicato", data => {

                if (puntiEl) puntiEl.textContent = data.TotalePunti;

                if (wrapper) {
                    wrapper.style.transition = "background-color 0.6s ease";
                    wrapper.style.backgroundColor = "#fff3cd";
                    setTimeout(() => wrapper.style.backgroundColor = "", 600);
                }

                if (window.mobishare?.showSuccessMessage)
                    mobishare.showSuccessMessage(`${data.Messaggio} (+${data.Punti} punti)`);
            });

            // --- BONUS USATO ---
            window.mobishareConnection.on("BonusUsato", data => {

                if (puntiEl) puntiEl.textContent = data.TotalePunti;

                if (wrapper) {
                    wrapper.style.transition = "background-color 0.6s ease";
                    wrapper.style.backgroundColor = "#ffd6d6";
                    setTimeout(() => wrapper.style.backgroundColor = "", 600);
                }

                if (window.mobishare?.showInfoMessage)
                    mobishare.showInfoMessage(data.Messaggio);
            });

        });
    </script>
}
