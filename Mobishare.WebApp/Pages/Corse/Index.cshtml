@page
@model Mobishare.WebApp.Pages.Corse.IndexModel
@{
    ViewData["Title"] = "Le Mie Corse";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-clock-history text-primary"></i> Le Mie Corse
        </h2>
        <a asp-page="/Corse/CorsaCorrente" class="btn btn-success">
            <i class="bi bi-bicycle"></i> Corsa in Corso
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Corse.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-info-circle display-4"></i>
            <h4 class="mt-3">Non hai ancora effettuato corse</h4>
            <p class="text-muted">Noleggia un mezzo per iniziare la tua prima corsa!</p>
            <a asp-page="/Mezzi/Index" class="btn btn-primary mt-3">
                <i class="bi bi-bicycle"></i> Cerca Mezzi Disponibili
            </a>
        </div>
    }
    else
    {
        <!-- Statistiche Rapide -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h3 class="text-primary">@Model.Corse.Count</h3>
                        <p class="mb-0 text-muted">Corse Totali</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h3 class="text-success">@Model.CorseCompletate</h3>
                        <p class="mb-0 text-muted">Corse Completate</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h3 class="text-danger">€@Model.TotaleSpeso.ToString("0.00")</h3>
                        <p class="mb-0 text-muted">Totale Speso</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabella Corse -->
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-list-ul"></i> Storico Completo</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Data Inizio</th>
                                <th>Data Fine</th>
                                <th>Mezzo</th>
                                <th>Parcheggi</th>
                                <th>Durata</th>
                                <th>Costo</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var corsa in Model.Corse.OrderByDescending(c => c.DataOraInizio))
                            {
                                <tr class="@(corsa.DataOraFine == null ? "table-warning" : "")">
                                    <td><strong>#@corsa.Id</strong></td>
                                    <td>@corsa.DataOraInizio.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @if (corsa.DataOraFine.HasValue)
                                        {
                                            @corsa.DataOraFine.Value.ToString("dd/MM/yyyy HH:mm")
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">In corso</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@corsa.MatricolaMezzo</span>
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            <i class="bi bi-arrow-right"></i> Da: #@corsa.IdParcheggioPrelievo
                                            @if (corsa.IdParcheggioRilascio.HasValue)
                                            {
                                                <br/>
                                                <i class="bi bi-arrow-left"></i> @: A: #@corsa.IdParcheggioRilascio
                                            }
                                        </small>
                                    </td>
                                    <td>
                                        @if (corsa.DataOraFine.HasValue)
                                        {
                                            var durata = (corsa.DataOraFine.Value - corsa.DataOraInizio).TotalMinutes;
                                            <span>@((int)durata) min</span>
                                        }
                                        else
                                        {
                                            var durataCorrente = (DateTime.UtcNow - corsa.DataOraInizio).TotalMinutes;
                                            <span class="text-warning">@((int)durataCorrente) min</span>
                                        }
                                    </td>
                                    <td>
                                        @if (corsa.CostoFinale.HasValue)
                                        {
                                            <strong class="text-danger">€@corsa.CostoFinale.Value.ToString("0.00")</strong>
                                        }
                                        else
                                        {
                                            <span class="text-muted">In corso</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>