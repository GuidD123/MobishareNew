<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mobishare</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-success">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <i class="bi bi-ev-station-fill"></i> Mobishare
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        @if (Context.Session.GetInt32("UserId").HasValue)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Mezzi">
                                    <i class="bi bi-bicycle"></i> Mezzi
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Parcheggi">
                                    <i class="bi bi-p-square"></i> Parcheggi
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Corse">
                                    <i class="bi bi-clock-history"></i> Corse
                                </a>
                            </li>
                            
                            @if (Context.Session.GetString("Ruolo") == "gestore")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="/Admin/Dashboard">
                                        <i class="bi bi-speedometer2"></i> Admin
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    
                    <ul class="navbar-nav">
                        @if (Context.Session.GetInt32("UserId").HasValue)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userMenu" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i> @Context.Session.GetString("NomeCompleto")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="/Profilo"><i class="bi bi-person"></i> Profilo</a></li>
                                    <li><a class="dropdown-item" href="/Profilo/Ricarica"><i class="bi bi-wallet2"></i> Ricarica</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/Account/Logout"><i class="bi bi-box-arrow-right"></i> Esci</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Accedi
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center py-3">
            &copy; 2025 - Mobishare - Sistema di sharing mezzi elettrici
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>