@page
@model Mobishare.WebApp.Pages.Account.PasswordDimenticataModel
@{
     ViewData["Title"] = "Recupero password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="mb-4 text-center">Recupero password</h3>

            @if (!string.IsNullOrEmpty(Model.Message))
            {
               <div class="alert alert-info">@Html.Raw(Model.Message)</div>
            }

            <form method="post">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" type="email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success w-100">
                    Invia link di reimpostazione
                </button>
            </form>

            <div class="text-center mt-3">
                <a asp-page="/Account/Login" class="text-muted">Torna al login</a>
            </div>
        </div>
    </div>
</div>