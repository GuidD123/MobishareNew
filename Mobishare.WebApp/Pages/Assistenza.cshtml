@page
@{
    ViewData["Title"] = "Assistenza - Mobishare";
    Layout = "_Layout";
}

<div class="container text-center mt-5 assistenza-fade">
    <div class="card assistenza-card shadow-sm">
        <div class="mb-4">
            <i class="bi bi-tools display-1 text-primary assistenza-icon"></i>
        </div>
        <h2 class="fw-bold mb-3" style="color: var(--primary-dark);">
            Pagina in costruzione
        </h2>
        <p class="text-muted mb-4">
            Stiamo lavorando per rendere disponibile l’area di supporto utenti.
            <br />
            In futuro potrai contattare l’assistenza direttamente da qui.
        </p>

        <div class="progress mb-4" style="height: 10px; border-radius: 10px; overflow: hidden;">
            <div class="progress-bar progress-bar-striped progress-bar-animated"
                 role="progressbar"
                 style="width: 75%; background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);">
            </div>
        </div>

        <a href="/DashboardUtente" class="btn btn-primary mt-2">
            <i class="bi bi-arrow-left"></i> Torna alla Dashboard
        </a>
    </div>
</div>
