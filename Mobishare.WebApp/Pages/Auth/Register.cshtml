@page
@model Mobishare.WebApp.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "Registrazione";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">
                        <i class="bi bi-person-plus-fill text-primary"></i> Registrati
                    </h2>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i> @Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Input.Nome" class="form-label">Nome</label>
                            <input asp-for="Input.Nome" class="form-control" placeholder="Mario" />
                            <span asp-validation-for="Input.Nome" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Cognome" class="form-label">Cognome</label>
                            <input asp-for="Input.Cognome" class="form-control" placeholder="Rossi" />
                            <span asp-validation-for="Input.Cognome" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <input asp-for="Input.Email" class="form-control" type="email" placeholder="mario.rossi@email.com" />
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <input asp-for="Input.Password" class="form-control" type="password" placeholder="••••••••" />
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                            <small class="form-text text-muted">
                                Minimo 8 caratteri, almeno 1 maiuscola e 1 numero
                            </small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.ConfermaPassword" class="form-label">Conferma Password</label>
                            <input asp-for="Input.ConfermaPassword" class="form-control" type="password" placeholder="••••••••" />
                            <span asp-validation-for="Input.ConfermaPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Registrati
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="mb-0">Hai già un account? 
                                <a asp-page="/Auth/Login" class="text-decoration-none">Accedi qui</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}